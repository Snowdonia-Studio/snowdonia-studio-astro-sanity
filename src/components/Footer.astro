---
// Footer component
const currentYear = new Date().getFullYear();
---

<footer class="mx-auto max-w-screen-2xl border-t px-4 py-8">
  <a href="/">
    <img src="../assets/snowdonia-logo-light.png" alt="Snowdonia Studio" class="h-10 w-10" />
  </a>
  <div class="flex flex-row items-center justify-between">
    <ul>
      <li>
        <a href="/services">Services</a>
      </li>
      <li>
        <a href="/work">Work</a>
      </li>
      <li>
        <a href="/about">About</a>
      </li>
      <li>
        <a href="/contact">Contact</a>
      </li>
    </ul>
    <ul class="flex flex-col gap-4 md:flex-row md:items-center md:gap-8">
      <li>
        <a
          class="inline-flex items-center gap-2 hover:underline"
          href="https://www.linkedin.com/company/snowdonia-studio/"
        >
          LinkedIn
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-5"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"></path>
          </svg>
        </a>
      </li>
    </ul>
  </div>
  <p class="pt-4 text-center text-sm text-gray-500 dark:text-gray-400">
    &copy; {currentYear} Snowdonia Studio. All rights reserved.
  </p>
</footer>
