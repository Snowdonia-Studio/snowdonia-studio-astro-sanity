---
import type { SanityDocument } from '@sanity/client';
import { loadQuery } from '../sanity/lib/load-query';
import { urlForImage } from '../sanity/lib/url-for-image';
import Services from './Services.astro';

interface HomepageSection {
  title?: string;
  content?: string;
  image?: {
    asset: {
      _ref: string;
      _type: string;
    };
    alt?: string;
  };
}

interface HomepageData extends SanityDocument {
  title?: string;
  subtitle?: string;
  description?: string;
  heroImage?: {
    asset: {
      _ref: string;
      _type: string;
    };
    alt?: string;
  };
  ctaText?: string;
  ctaLink?: string;
  sections?: HomepageSection[];
}

// Fetch homepage data from Sanity
const result = await loadQuery<HomepageData>({
  query: `*[_type == "homepage"][0]{
    title,
    subtitle,
    description,
    heroImage,
    ctaText,
    ctaLink,
    sections
  }`,
});

// Extract the actual data (handle RawQueryResponse wrapper if needed)
const homepage = result.data as any as HomepageData | null;

// Fallback values if no homepage data exists yet
const title = homepage?.title || 'Welcome to Snowdonia Studio';
const subtitle = homepage?.subtitle || '';
const description = homepage?.description || '';
const heroImage = homepage?.heroImage;
const ctaText = homepage?.ctaText || 'Get Started';
const ctaLink = homepage?.ctaLink || '#contact';
const sections = (homepage?.sections || []) as HomepageSection[];
---

<div id="container">
  {
    heroImage && (
      <img
        id="background"
        src={urlForImage(heroImage).width(1920).height(1080).url()}
        alt={heroImage.alt || 'Background'}
        fetchpriority="high"
      />
    )
  }
  <main>
    <section id="hero">
      <h1 class="text-3xl font-bold">
        {title}
      </h1>
      {subtitle && <h2 class="text-xl text-gray-600 dark:text-gray-400 mt-2">{subtitle}</h2>}
      {description && <p class="text-lg mt-4 max-w-2xl">{description}</p>}
      <section id="links">
        <a class="button" href={ctaLink}>{ctaText}</a>
      </section>
    </section>
  </main>

  {
    sections && sections.length > 0 && (
      <div id="sections" class="sections-container">
        {sections.map((section: HomepageSection) => (
          <div class="section-box">
            {section.image && (
              <img
                src={urlForImage(section.image).width(600).height(400).url()}
                alt={section.image.alt || section.title || 'Section image'}
                class="section-image"
              />
            )}
            {section.title && <h2>{section.title}</h2>}
            {section.content && <p>{section.content}</p>}
          </div>
        ))}
      </div>
    )
  }
</div>

<Services />

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
    object-fit: cover;
  }

  #container {
    font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
    min-height: 100vh;
    padding: 2rem 1rem;
  }

  main {
    min-height: calc(100vh - 200px);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
    max-width: 1200px;
    width: 100%;
  }

  h1 {
    font-size: 3rem;
    margin-top: 0.25em;
    line-height: 1.2;
  }

  h2 {
    margin: 0 0 1em;
    font-weight: normal;
    color: #111827;
    font-size: 20px;
  }

  #links {
    display: flex;
    gap: 16px;
    margin-top: 2rem;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 10px 12px;
    color: #111827;
    text-decoration: none;
    transition: color 0.2s;
  }

  #links a:hover {
    color: rgb(78, 80, 86);
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 10px;
    padding: 14px 24px;
    font-size: 1rem;
    font-weight: 600;
  }

  #links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
    transform: translateY(-1px);
  }

  p {
    color: #4b5563;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
  }

  .sections-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
    padding: 0 1rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-box {
    padding: 24px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(50px);
    transition:
      transform 0.2s,
      background 0.2s;
  }

  .section-box:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.95);
  }

  .section-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 1rem;
    object-fit: cover;
  }

  .section-box h2 {
    margin: 0 0 0.5em;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .section-box p {
    color: #4b5563;
    line-height: 1.6;
  }

  @media screen and (max-width: 768px) {
    #container {
      padding: 1rem;
    }

    #hero {
      padding-top: 2rem;
    }

    h1 {
      font-size: 2rem;
      line-height: 1.3;
    }

    #links {
      flex-wrap: wrap;
    }

    #links a.button {
      padding: 14px 18px;
      width: 100%;
      justify-content: center;
    }

    .sections-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-top: 2rem;
    }
  }

  @media (prefers-color-scheme: dark) {
    h1 {
      color: #f9fafb;
    }

    h2 {
      color: #d1d5db;
    }

    p {
      color: #9ca3af;
    }

    .section-box {
      background: rgba(31, 41, 55, 0.9);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .section-box:hover {
      background: rgba(31, 41, 55, 0.95);
    }
  }
</style>
